@using CCIMS.Models
@model CCIMS.Models.Case

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Case</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateField)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateField)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CaseID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>

@if (User.IsInRole("Investigator"))
{
    <h4 class="mt-4">Add Investigation Log</h4>

    <form asp-controller="InvestigationLogs"
          asp-action="AddLog"
          method="post">

          @Html.AntiForgeryToken()

        <input type="hidden" name="caseId" value="@Model.CaseID" />

        <div class="form-group">
            <label>Action Taken</label>
            <input name="actionTaken" class="form-control" required />
        </div>

        <div class="form-group">
            <label>Notes</label>
            <textarea name="notes" class="form-control"></textarea>
        </div>

        <button type="submit" class="btn btn-primary mt-2">
            Add Log
        </button>
    </form>
}
else if(Model.Status== CaseStatus.Closed)
{
    <p class = "text-muted mt-3">
        This case is closed. No further logs can be added.
    </p>
}



<h3 class="mt-4">Investigation Timeline</h3>

@if (Model.InvestigationLogs != null && Model.InvestigationLogs.Any())
{
    <div class="mt-3">
        @foreach(var log in Model.InvestigationLogs
            .OrderByDescending(l => l.CreatedAt))
        {
            <li class="list-group-item">
                <small class="text-muted">
                    @log.CreatedAt.ToString("dd MMM yyyy, hh:mm tt")
                    — by <b>@log.InvestigatorName</b>
                </small>
                <p class="mb-1">@log.ActionTaken</p>
                <p class="text-muted">@log.Notes</p>
            </li>

        }
    </div>
}
else
{
    <p class="text-muted">No investigation logs yet.</p>
}

